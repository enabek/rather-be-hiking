<div class="container">

  <% @articles.each do |article| %>
    <h3 class="main-article-link"><%= link_to article.title, article_path(article) %></h3>
    <p><%= article.body %></p>
    <p><%= article.created_at.strftime("%B ") + article.created_at.strftime("%d").to_i.ordinalize + ", " + article.created_at.strftime("%Y") %> by <%= link_to article.user.username, user_path(article.user_id) %></p>
    <p><%= link_to article.comments.count, article_path(article) %> comments</p>
    <hr>
  <%end%>

</div>
