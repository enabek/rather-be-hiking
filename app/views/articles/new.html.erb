<div class="container">
  <h1>Add a new article:</h1>

  <%= form_for @article do |f| %>
    <%= f.label :title %>:
      <%= f.text_field :title, class: "form-control" %><br>
    <%= f.label :body %>:
      <%= f.text_area :body, class: "form-control", rows: "15", id: "comment" %><br>
    <%= f.submit "submit", class: "btn btn-primary"   %>
  <% end %>

</div>