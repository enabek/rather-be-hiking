<div class="container">
  <h1>Login:</h1>

  <%= form_for(:session, url: login_path) do |f| %>
    <p><%= f.text_field :username, placeholder: "username" %></p>
    <p><%= f.password_field :password, placeholder: "password" %></p>

    <%= f.submit "Log In", class: "btn btn-primary" %>
  <% end %>

  Not a member? <%= link_to("Sign up!", new_user_path) %>
</div>